{
  "manifest_version": 3,
  "name": "YouTube Music Tracker",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["spo.js"]
    }
  ],
  "action": {
    "default_title": "YouTube Music Tracker"
  },
  
  "host_permissions" : ["*://ec2-15-164-11-77.ap-northeast-2.compute.amazonaws.com/*"]

}